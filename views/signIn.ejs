  <body>
    <header></header>
    <div id="cont">
      <p class="login">Login</p>
      <hr />
      <div id="main">
        <div class="vertical">
          <form>
            <label for="">Email</label>
            <br />
            <input type="text" id="email" />
            <br /><br />
            <label for="">Password</label>
            <br />
            <input type="text" id="password" />
          </form>
          <div id="forgot">
            <p>Forgot password?</p>
          </div>

          <button>Continue</button>
          <div id="char">
            <p>Don't have an account yet?</p>
            <a href="/auth/register" class="reg"><p>REGISTER</p></a>
          </div>
        </div>
        <div>
          <p class="or">OR</p>
        </div>
        <div class="box2">
          <p>Login Using</p>
          <div class="fb">
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRPSigXFRA-lTqQ3AU6GBPH3-R46kfflfobbPG-Wh3ptncRtif5VhSJ_ROS42N7ex73TJI&usqp=CAU"
              alt=""
              class="image"
            />
